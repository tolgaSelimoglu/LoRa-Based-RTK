<launch>
  <!-- URDF dosyasını doğrudan yükle -->
  <param name="robot_description" textfile="$(find kuzu_robot)/urdf/kuzu_robot.urdf" />

  <!-- Sabit joint'ler için -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />

  <!-- TF yayıncısı -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <!-- RViz  -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find kuzu_robot)/rviz/kuzu_robot.rviz" />


  <!-- IMU to odom node  -->
  <node name="imu_to_odom" pkg="kuzu_robot" type="imu_to_odom.py" output="screen" respawn="false"/>
 
  <!-- Lidar verisi -->
  <include file="$(find rplidar_ros)/launch/rplidar_a3.launch" />


    <!-- TF: map odom -->
  <node pkg="tf" type="static_transform_publisher" name="map_to_odom"
        args="0 0 0 0 0 0 map scanmatcher_frame 100" />

  <!-- TF: odom base_link   -->
  <node pkg="tf" type="static_transform_publisher" name="scanmather_frame_to_base_link"
        args="0 0 0 0 0 0 scanmatcher_frame base_link 100" />

  <!-- TF: lazer sensörün konumu   -->

  <node pkg="tf" type="static_transform_publisher" name="laser_broadcaster"
        args="0 0 0 0 0 0 base_link laser 100" />




  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>

    <param name="publish_odometry" value="true"/>
    <param name="publish_map_odom_transform" value="true"/>


    <param name="scan_topic" value="scan"/>
    <param name="update_factor_free" value="0.4"/>
    <param name="update_factor_occupied" value="0.9"/>
    <param name="map_update_interval" value="2.0"/>
    <param name="map_resulation" value="0.05"/>
    <param name="map_size" value="1024"/>
    <param name="map_start_x" value="0.5"/>
    <param name="map_start_y" value="0.5"/>
    <param name="map_multi_res_levels" value="3"/>
  </node>
<!-- Move Base -->
  <node pkg="move_base" type="move_base" name="move_base" output="screen">
    <param name="base_global_planner" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS" />
    
    <rosparam file="$(find kuzu_robot)/config/costmap_common_params.yaml" command="load" />
    <rosparam file="$(find kuzu_robot)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find kuzu_robot)/config/local_costmap_params.yaml" command="load" />
  </node>

</launch>

