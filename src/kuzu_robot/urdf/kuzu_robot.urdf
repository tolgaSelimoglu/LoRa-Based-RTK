<?xml version="1.0"?>
<robot name="kuzu_robot">

  <!-- Base -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4 0.3 0.1"/>
      </geometry>
      <origin xyz="0 0 0.05"/>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>
  </link>

  <!-- FRONT LEFT WHEEL (STEERED) -->
  <link name="front_left_wheel"/>
  <joint name="steering_fl_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.2 0.15 0.03"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.5" upper="0.5" effort="1.0" velocity="1.0"/>
  </joint>

  <!-- FRONT RIGHT WHEEL (STEERED) -->
  <link name="front_right_wheel"/>
  <joint name="steering_fr_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.2 -0.15 0.03"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.5" upper="0.5" effort="1.0" velocity="1.0"/>
  </joint>

  <!-- REAR LEFT WHEEL (DRIVEN) -->
  <link name="rear_left_wheel"/>
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.2 0.15 0.03"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- REAR RIGHT WHEEL (DRIVEN) -->
  <link name="rear_right_wheel"/>
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.2 -0.15 0.03"/>
    <axis xyz="0 1 0"/>
  </joint>

<!-- LIDAR -->
<link name="laser">
  <visual>
    <geometry>
      <cylinder radius="0.02" length="0.01"/>
    </geometry>
    <origin xyz="0.15 0 0.1" rpy="1.5708 0 0"/>
    <material name="red">
      <color rgba="1 0 0 1"/>
    </material>
  </visual>
</link>

<joint name="laser_joint" type="fixed">
  <parent link="base_link"/>
  <child link="laser"/>
  <origin xyz="0.15 0 0.1"/>
</joint>

